VAR
    word : STRING;
    str : STRING := word[1,word.length-2]; // str is word minus the first and last Char
    n : INTEGER := word.length;
    m : INTEGER := 0;

FUNCTION Is_palindrome(word,m,n) : BOOLEAN

BEGIN
    IF (n = m ) THEN
        RETURN TRUE;

    ELSE IF (word[m] = word[n-1]) THEN
        Is_palindrome(str,m+1,n-1)
    ELSE
    RETURN FALSE ;
    END_IF
    
END

